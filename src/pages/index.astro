---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import '../assets/css/home.css';
import '../assets/css/services-carousel.css';
import '../assets/css/footer.css';

const title = "AGWS";
const description = "Agence web spécialisée dans la création de sites internet, le référencement SEO et le marketing digital";
---

<Layout title={title} description={description}>
  <Header />
  <main class="home-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-banner fullwidth">
        <img src="/img/light.png" alt="Banner" class="hero-banner-image light-mode" />
        <img src="/img/dark.png" alt="Banner" class="hero-banner-image dark-mode" />
      </div>
    </section>
    
    <!-- Services Section -->
    <section class="services-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Nos services</h2>
          <p class="section-description">
            Nous vous accompagnons dans votre transformation digitale avec des solutions web sur-mesure. 
            Création de sites internet, optimisation digitale et stratégie en ligne pour vous démarquer de la concurrence.
          </p>
        </div>
        
        <div class="services-grid">
          <!-- Service 1 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
            </div>
            <h3 class="service-title">Développement Web</h3>
            <p class="service-text">
              Création de sites web modernes, rapides et optimisés pour tous les appareils.
            </p>
            <div class="service-tags">
              <div class="tag responsive">
                <span class="tag-dot"></span>
                <span class="tag-text">Responsive</span>
              </div>
              <div class="tag performance">
                <span class="tag-dot"></span>
                <span class="tag-text">Performance</span>
              </div>
              <div class="tag modern">
                <span class="tag-dot"></span>
                <span class="tag-text">Modern UI</span>
              </div>
            </div>
            <a href="/services/dev_web" class="service-link">En savoir plus</a>
          </div>
          
          <!-- Service 2 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
              </svg>
            </div>
            <h3 class="service-title">E-commerce</h3>
            <p class="service-text">
              Création de boutiques en ligne performantes pour vendre vos produits et services.
            </p>
            <div class="service-tags">
              <div class="tag shopify">
                <span class="tag-dot"></span>
                <span class="tag-text">Shopify</span>
              </div>
              <div class="tag woocommerce">
                <span class="tag-dot"></span>
                <span class="tag-text">WooCommerce</span>
              </div>
              <div class="tag prestashop">
                <span class="tag-dot"></span>
                <span class="tag-text">PrestaShop</span>
              </div>
              <div class="tag cms">
                <span class="tag-dot"></span>
                <span class="tag-text">CMS personnalisé</span>
              </div>
            </div>
            <a href="/services/e-commerce" class="service-link">En savoir plus</a>
          </div>
          
          <!-- Service 3 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon>
              </svg>
            </div>
            <h3 class="service-title">Référencement SEO</h3>
            <p class="service-text">
              Optimisation de votre présence en ligne pour améliorer votre visibilité dans les moteurs de recherche.
            </p>
            <div class="service-tags">
              <div class="tag google-seo">
                <span class="tag-dot"></span>
                <span class="tag-text">Google SEO</span>
              </div>
              <div class="tag optimization">
                <span class="tag-dot"></span>
                <span class="tag-text">Optimisation</span>
              </div>
              <div class="tag visibility">
                <span class="tag-dot"></span>
                <span class="tag-text">Visibilité</span>
              </div>
            </div>
            <a href="/services/referencement-seo" class="service-link">En savoir plus</a>
          </div>
          
          <!-- Service 4 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21.21 15.89A10 10 0 1 1 8 2.83"></path>
                <path d="M22 12A10 10 0 0 0 12 2v10z"></path>
              </svg>
            </div>
            <h3 class="service-title">Création d'image numérique</h3>
            <p class="service-text">
              Création de logos, chartes graphiques et identités visuelles pour votre entreprise.
            </p>
            <div class="service-tags">
              <div class="tag branding">
                <span class="tag-dot"></span>
                <span class="tag-text">Branding</span>
              </div>
              <div class="tag visual-identity">
                <span class="tag-dot"></span>
                <span class="tag-text">Identité visuelle</span>
              </div>
              <div class="tag graphic-charter">
                <span class="tag-dot"></span>
                <span class="tag-text">Charte graphique</span>
              </div>
            </div>
            <a href="/services/image-numerique" class="service-link">En savoir plus</a>
          </div>
          
          <!-- Service 5 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
            </div>
            <h3 class="service-title">Publicité ADS | SEA & Réseaux Sociaux</h3>
            <p class="service-text">
              Gestion et optimisation de vos campagnes publicitaires sur Google Ads, Facebook Ads et mise en avant de votre marque.
            </p>
            <div class="service-tags">
              <div class="tag google-ads">
                <span class="tag-dot"></span>
                <span class="tag-text">Google Ads</span>
              </div>
              <div class="tag facebook-ads">
                <span class="tag-dot"></span>
                <span class="tag-text">Facebook Ads</span>
              </div>
              <div class="tag instagram-ads">
                <span class="tag-dot"></span>
                <span class="tag-text">Instagram Ads</span>
              </div>
            </div>
            <a href="/contact" class="service-link">En savoir plus</a>
          </div>
          
          <!-- Service 6 -->
          <div class="service-card">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <h3 class="service-title">Gestion de domaine & Maintenance</h3>
            <p class="service-text">
              Configuration complète et maintenance de votre présence en ligne : noms de domaine, emails professionnels, hébergement et support.
            </p>
            <div class="service-tags">
              <div class="tag domain-management">
                <span class="tag-dot"></span>
                <span class="tag-text">Domaine</span>
              </div>
              <div class="tag hosting-service">
                <span class="tag-dot"></span>
                <span class="tag-text">Hébergement</span>
              </div>
              <div class="tag email-pro">
                <span class="tag-dot"></span>
                <span class="tag-text">Email pro</span>
              </div>
              <div class="tag support-service">
                <span class="tag-dot"></span>
                <span class="tag-text">Support 24/7</span>
              </div>
            </div>
            <a href="/contact" class="service-link">En savoir plus</a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Prêt à transformer votre présence numérique ?</h2>
          <p class="cta-text">Contactez-nous dès aujourd'hui pour discuter de votre projet et obtenir un devis personnalisé.</p>
          <a href="/contact" class="cta-button">Demander un devis gratuit</a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>




